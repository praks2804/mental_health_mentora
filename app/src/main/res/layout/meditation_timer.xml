<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    android:padding="24dp"
    tools:context=".MeditationTimerActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meditation Timer"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set your mindful practice duration"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="@id/titleText"
        android:layout_marginTop="4dp"/>

    <!-- Time Buttons -->
    <GridLayout
        android:id="@+id/timeButtonsGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 5 min -->
        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:text="5 min"
            android:background="@drawable/outline"
            android:textColor="#000000" />

        <!-- 10 min -->
        <Button
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:text="10 min"
            android:background="@drawable/outline"
            android:textColor="#000000" />

        <!-- 15 min -->
        <Button
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:text="15 min"
            android:background="@drawable/outline"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>

        <!-- 20 min -->
        <Button
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:text="20 min"
            android:background="@drawable/outline"
            android:layout_marginTop="10dp"
            android:textColor="#000000" />
    </GridLayout>

    <!-- Timer Circle -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:00"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/timeButtonsGrid"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/minutesLeftText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="minutes left"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/timerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Timer Controls -->
    <LinearLayout
        android:id="@+id/controlButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/minutesLeftText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_reset"
            android:background="@null"
            android:contentDescription="Restart" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play"
            android:background="@null"
            android:contentDescription="Play"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_pause"
            android:background="@null"
            android:contentDescription="Pause" />
    </LinearLayout>

    <!-- Quote Card -->
    <LinearLayout
        android:id="@+id/quoteCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F8EFFF"
        android:padding="16dp"
        android:layout_marginTop="32dp"
        android:elevation="4dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/controlButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Inspiration"
            android:textSize="14sp"
            android:textColor="#555555" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meditation is the key to unlock the door to peace."
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â€” Dalai Lama"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
