<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/page_background"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomepageActivity">

    <!-- MAIN CONTENT -->
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- Scrollable Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:padding="30dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:orientation="vertical">

            <!-- Top bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:id="@+id/menuIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_hamburger" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Welcome to mentora"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- Mood Question -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How are you feeling today?"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Mood Emoji Row 1 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <!-- 5 Mood Buttons -->

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/happyBtn"
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_happy"
                    android:paddingTop="10dp"
                    android:text="Happy"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <Space android:layout_width="6dp" android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:text="Calm"
                    android:id="@+id/calmBtn"
                    android:drawableTop="@drawable/ic_relaxed"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <Space android:layout_width="6dp" android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:text="Sad"
                    android:id="@+id/sadBtn"
                    android:drawableTop="@drawable/ic_sad"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <Space android:layout_width="6dp" android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:text="Angry"
                    android:id="@+id/AngryBtn"
                    android:drawableTop="@drawable/ic_frustrated"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <Space android:layout_width="6dp" android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:text="Tired"
                    android:id="@+id/TiredBtn"
                    android:drawableTop="@drawable/ic_tired"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Mood Emoji Row 2 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:text="Neutral"
                    android:id="@+id/NeutralBtn"
                    android:drawableTop="@drawable/ic_neutral"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <Space android:layout_width="6dp" android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:text="Loving"
                    android:id="@+id/LovingBtn"
                    android:drawableTop="@drawable/ic_loving"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <Space android:layout_width="6dp" android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:text="Heartbroken"
                    android:id="@+id/HeartbrokenBtn"
                    android:drawableTop="@drawable/ic_heartbroken"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <Space android:layout_width="6dp" android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:text="Anxious"
                    android:id="@+id/AnxiousBtn"
                    android:drawableTop="@drawable/ic_anxious"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <Space android:layout_width="6dp" android:layout_height="wrap_content" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="70dp"
                    android:paddingTop="10dp"
                    android:layout_weight="1"
                    android:text="Confused"
                    android:id="@+id/ConfusedBtn"
                    android:drawableTop="@drawable/ic_neutral"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Mentora Suggests Card -->
            <LinearLayout
                android:id="@+id/suggestionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_button"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/suggestionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mentora Suggests"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/suggestionDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Based on mood"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/startNowBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Now"
                    android:textColor="#000000"
                    android:background="@drawable/rounded_bg_white"/>

<!--                <ImageView-->
<!--                    android:layout_width="24dp"-->
<!--                    android:layout_height="24dp"-->
<!--                    android:src="@drawable/ic_heart"-->
<!--                    android:layout_marginBottom="8dp" />-->

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Mentora Suggests"-->
<!--                    android:textSize="16sp"-->
<!--                    android:textStyle="bold"-->
<!--                    android:textColor="#FFFFFF"-->
<!--                    android:layout_marginBottom="4dp" />-->

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Based on your recent mood patterns, try our new meditation series"-->
<!--                    android:textSize="14sp"-->
<!--                    android:textColor="#FFFFFF"-->
<!--                    android:layout_marginBottom="16dp" />-->

<!--                <Button-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:text="Start Now"-->
<!--                    android:textColor="#000000"-->
<!--                    android:background="@drawable/rounded_bg_white"-->
<!--                    android:paddingLeft="16dp"-->
<!--                    android:paddingRight="16dp"-->
<!--                    android:minHeight="40dp"-->
<!--                    android:textSize="14sp" />-->
            </LinearLayout>

            <!-- Weekly Meditation Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="vertical"
                android:background="@drawable/light_rounded_button"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly Meditation"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Sessions"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This Week"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <!-- Mood Tracker Week Row -->
            <LinearLayout
                android:id="@+id/moodTrackerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/light_rounded_button"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_happy"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="M"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_excited"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="T"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_anxious"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="W"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_loving"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="T"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_blessed"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="F"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_tired"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="S"
                    android:textSize="14sp"
                    android:textColor="#666666" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_sad"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:text="S"
                    android:textSize="14sp"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include
        layout="@layout/fragment_nav"/>

    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:foregroundGravity="center"
        android:background="@android:color/white"
        app:headerLayout="@layout/nav_header" />


</androidx.drawerlayout.widget.DrawerLayout>
