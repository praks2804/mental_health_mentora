<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page_background"
    tools:context=".StressReliefMusicActivity">

    <!-- Scrollable Mood Selection Section -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/bottom_nav"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stress Relief Music"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="40dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How are you feeling?"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select your current mood"
                android:textSize="16sp"
                android:textColor="#808080"
                android:layout_marginBottom="16dp" />

            <!-- Mood Grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true"
                android:layout_marginBottom="24dp">

                <!-- Happy -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#F8F8F8"
                    android:padding="16dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_happy"
                        android:contentDescription="Happy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Happy"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Relaxed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#F8F8F8"
                    android:padding="16dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_relaxed"
                        android:contentDescription="Relaxed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Relaxed"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Excited -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#F8F8F8"
                    android:padding="16dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_excited"
                        android:contentDescription="Excited" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Excited"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Loving -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#F8F8F8"
                    android:padding="16dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_loving"
                        android:contentDescription="Loving" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loving"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Blessed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#F8F8F8"
                    android:padding="16dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_blessed"
                        android:contentDescription="Blessed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blessed"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Sad -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#F8F8F8"
                    android:padding="16dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_sad"
                        android:contentDescription="Sad" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sad"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Frustrated -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#F8F8F8"
                    android:padding="16dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_frustrated"
                        android:contentDescription="Frustrated" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frustrated"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Tired -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#F8F8F8"
                    android:padding="16dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_tired"
                        android:contentDescription="Tired" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tired"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Anxious -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#F8F8F8"
                    android:padding="16dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_anxious"
                        android:contentDescription="Anxious" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anxious"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Neutral -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="#F8F8F8"
                    android:padding="16dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_neutral"
                        android:contentDescription="Neutral" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Neutral"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <include
        layout="@layout/fragment_nav" />
</RelativeLayout>
