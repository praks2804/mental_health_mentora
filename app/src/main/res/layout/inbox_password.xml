<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InboxPasswordActivity"    android:padding="24dp"
    android:background="@drawable/page_background">

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mentora"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="#000000" />

    <!-- Reset Password Heading -->
    <TextView
        android:id="@+id/textHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check your inbox"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:textColor="#000000" />

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/textInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click “Continue” to reset your password for abcd@gmail.com"
        android:textSize="16sp"
        android:layout_below="@id/textHeading"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:textColor="#333333" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/buttonCode"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Code"
        android:textSize="18sp"
        android:textColor="#000000"
        android:background="@drawable/outline_password"
        android:layout_below="@id/textInstruction"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="8dp" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_below="@id/textInstruction"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/outline_password"
        android:text="Continue"
        android:textColor="#000000"
        android:textSize="18sp" />

    <!-- Back to Login -->
    <TextView
        android:id="@+id/textBackToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend email"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/buttonContinue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="#000000" />

    <!-- Terms and Privacy -->
    <LinearLayout
        android:id="@+id/legalLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms of Use"
            android:textSize="14sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  |  "
            android:textSize="14sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>
</RelativeLayout>