<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- Progress + Question Indicator -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvQuestionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question 5 of 10"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:progress="50"
            android:max="100"
            android:progressTint="#C084FC"
            android:backgroundTint="#E0E0E0"/>
    </LinearLayout>

    <!-- Question Section -->
    <LinearLayout
        android:id="@+id/questionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you feel emotionally supported when you're going through a tough time?"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="normal" />
    </LinearLayout>

    <!-- Options Section -->
    <LinearLayout
        android:id="@+id/optionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btnYes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:background="@drawable/options"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnSometimes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sometimes"
            android:background="@drawable/options"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No"
            android:background="@drawable/options"
            android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>
